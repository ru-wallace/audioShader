{
    "restartable": "rs",
    "ignore": [
      ".git",
      ".gitignore",
      "node_modules/**/node_modules",
      "types/*",
      "build/*"
    ],
    "verbose": false,
    "execMap": {
      "ts": "npx tsc && vite serve ./www --config vite.config.js"
    },
    "events": {
      "restart": "echo 'App restarted due to:\n'$FILENAME'\" with title \"nodemon\"'"
    },
    "watch": [
        "src"
    ],
    "env": {
      "NODE_ENV": "production"
    },
    "ext": "ts"
  }